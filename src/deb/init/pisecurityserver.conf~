description "PiHomeSecurity Server"
author  "PatriotCoder.com"

start on runlevel [2345]
stop on runlevel [!2345]

env USER=piuser

script
    echo $$ > /var/run/pihomesecserver.pid
    su - $USER -c "cd /home/piuser/pisecurityserver; java -jar PiHomeSecurity.jar" 2> /var/log/pihomesecurityserver.out
end script

post-stop script
    rm -f /var/run/pihomesecserver.pid
end script
